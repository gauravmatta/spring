<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
	<filter>
		<filter-name>security-filter</filter-name>
		<filter-class>org.javaimplant.newsfeed.Filters.SecurityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>security-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
   	<listener>
		<listener-class>org.javaimplant.newsfeed.Init.Init</listener-class>
	</listener>
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.HomeServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>home</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>newsfeed</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.NewsFeedServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>news</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.NewsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>root</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.RootServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>home</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>list-news-item</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.ListNewsItemsServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>list-news-item</param-value>
		</init-param>	
	</servlet>
	<servlet>
		<servlet-name>view-news-item</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.ViewNewsItemServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>view-news-item</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>edit-news-item</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.EditNewsItemServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>edit-news-item</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>create-news-item</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.CreateNewsItemServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>edit-news-item</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>delete-news-item</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.DeleteNewsItemServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>delete-news-item</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.LoginServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>login</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>org.javaimplant.newsfeed.Servlets.LogoutServlet</servlet-class>
		<init-param>
			<param-name>jsp</param-name>
			<param-value>login</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>delete-news-item</servlet-name>
		<url-pattern>/delete-news-item</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>create-news-item</servlet-name>
		<url-pattern>/create-news-item</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>edit-news-item</servlet-name>
		<url-pattern>/edit-news-item</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>view-news-item</servlet-name>
		<url-pattern>/view-news-item</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>list-news-item</servlet-name>
		<url-pattern>/list-news-items</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>root</servlet-name>
		<url-pattern>/root</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>newsfeed</servlet-name>
		<url-pattern>/news.rss</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>news</servlet-name>
		<url-pattern>/news</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>dataSource</description>
		<res-ref-name>datasource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>newsfeed</web-resource-name>
			<url-pattern>/login</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
</web-app>